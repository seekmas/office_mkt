                <h2>{{ 'backend.client.update.contracts' | trans | raw }}</h2>
            </div>

            {% for contract in client.contract %}

                <div class="widget">
                    <div class="widget-simple">
                        <a href="javascript:void(0)" class="widget-icon pull-left animation-fadeIn themed-background">
                            <i class="gi gi-book"></i>
