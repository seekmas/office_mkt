<div class="row">
    <div class="col-md-12">
        <!-- BOX -->
        <div class="box border pink">
            <div class="box-title">
                <h4><i class="fa fa-users"></i>所有供应商</h4>
                <div class="tools">

                    <a href="javascript:;" class="reload">
                        <i class="fa fa-refresh"></i>
                    </a>
                    <a href="javascript:;" class="collapse">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a href="javascript:;" class="remove">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>公司名称</th>
                        <th>联系人姓名</th>
                        <th>联系人电话</th>
                        <th>联系人职务</th>
                        <th>公司地址</th>
                        <th>城市</th>
                        <th>邮政编码</th>
                        <th>国家/地区</th>
                        <th>传真</th>
                        <th>电子邮件</th>
                        <th>备注</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for supply in supplies %}
                    <tr>
                        <td>{{ supply.id }}</td>
                        <td>{{ supply.name }}</td>
                        <td>{{ supply.personName }}</td>
                        <td>{{ supply.personPhone }}</td>
                        <td>{{ supply.personDuty }}</td>
                        <td>{{ supply.companyAddress }}</td>
                        <td>{{ supply.city }}</td>
                        <td>{{ supply.postcode }}</td>
                        <td>{{ supply.country }}</td>
                        <td>{{ supply.fax }}</td>
                        <td>{{ supply.email }}</td>
                        <td>{{ supply.notes }}</td>
                        <td>
                            <a href="{{ url('web_edit_info' , {'id':supply.id}) }}"><i class="fa fa-edit"></i></a>
                            <a href="{{ url('web_delete_info' , {'id':supply.id}) }}"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /BOX -->
    </div>


</div>